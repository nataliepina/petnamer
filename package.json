    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest src --watch --notify",
    "cover": "jest --coverage",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.+(js|md|ts|css|sass|less|graphql|yml|yaml|scss|json|vue)\"",
